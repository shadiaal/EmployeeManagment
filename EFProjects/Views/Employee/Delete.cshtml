@model EFProjects.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center text-danger mb-4">Delete Employee</h2>

        <div class="alert alert-warning text-center">
            <strong>Are you sure you want to delete this employee?</strong>
        </div>

        <div class="mb-3">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Position:</strong> @Model.Position</p>
            <p><strong>Salary:</strong> @Model.Salary</p>
        </div>

        <form asp-action="Delete" method="post" class="text-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
